<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--
    DarkActionBar - you will see the header in the app
    NoActionBar - header at the top will disappear
    -->
    <style name="Theme.BasicAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="multicolorbutton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/teal_200</item>
        <item name="colorButtonNormal">@android:color/holo_blue_dark</item>
    </style>

    <style name="simpleButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_blue_dark</item>
    </style>
</resources>